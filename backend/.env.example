# District Padel Backend Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Database Configuration
# Required: PostgreSQL connection string (will auto-convert to asyncpg driver if needed)
DATABASE_URL=postgresql+asyncpg://district_padel:your_password_here@localhost:5434/district_padel

# Required: Database password (used by docker-compose and for constructing DATABASE_URL)
# Must be provided - no default value for security
DB_PASSWORD=your_secure_password_here

# Security
# Required: Secret key for JWT token signing (use a strong random string in production)
SECRET_KEY=your-secret-key-change-in-production

# Optional: JWT algorithm (default: HS256)
ALGORITHM=HS256

# Optional: JWT token expiration in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Configuration
# Optional: API version prefix (default: /api/v1)
API_V1_STR=/api/v1

# Optional: Project name (default: District Padel Backend)
PROJECT_NAME=District Padel Backend

# CORS Configuration
# Optional: Comma-separated list of allowed origins (default: http://localhost:5173)
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# Optional: Comma-separated list of allowed HTTP methods (default: GET,POST,PUT,PATCH,DELETE,OPTIONS)
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# Optional: Comma-separated list of allowed headers (default: Authorization,Content-Type)
CORS_ALLOW_HEADERS=Authorization,Content-Type

# Optional: Comma-separated list of exposed headers (default: empty)
CORS_EXPOSE_HEADERS=

# Environment
# Optional: Environment name (default: development)
ENVIRONMENT=development

# Optional: Enable debug mode (default: True)
DEBUG=True
